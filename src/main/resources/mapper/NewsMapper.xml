<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="comsoftware.engine.mapper.NewsMapper">
    <select id="getPlayerHotNews" resultType="comsoftware.engine.entity.PlayerNewsTitles">
        select *
        from `PlayerNewsTitles`
        where `playerId` = #{id};
    </select>

    <select id="getNewsById" resultType="comsoftware.engine.entity.News">
        select *
        from `News`
        where `id` = #{id};
    </select>

</mapper>